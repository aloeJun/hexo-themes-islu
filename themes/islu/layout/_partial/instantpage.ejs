<link rel="stylesheet" type="text/css"
      href="<%- theme.jsDelivr.url %><%- url_for('/libs/introduction/introduction.css') %>">
<script src="<%- theme.jsDelivr.url %><%- url_for('/libs/introduction/introduction.js') %>"></script>
<script type="text/javascript">
    /*判断是否为移动端*/
    function isMobile() {
        let info = navigator.userAgent;
        let agents = ["Android", "iPhone", "SymbianOS", "Windows Phone", "iPod", "iPad"];
        for (let i = 0; i < agents.length; i++) {
            if (info.indexOf(agents[i]) >= 0) return true;
        }
        return false;
    }

    if (isMobile() == false) {
        if (document.cookie.indexOf("a=islu") == -1) {
            /*day为多少天内打开不再进行引导*/
            var day = 1;
            var t = new Date(new Date().getTime() + 1000 * 60 * 60 * 24 * day);
            document.cookie = "a=islu; expires=" + t.toGMTString();


            var enjoyhint_instance = new EnjoyHint({});

            var enjoyhint_script_steps = [
                {
                    'next .brand-logo': '欢迎来到Lu\'s Blog！让我来引导你了解它。',
                    'skipButton': {className: "mySkip", text: "狠心跳过!"},
                    'nextButton': {className: "myNext", text: "好的"}

                },
                {
                    'next #sma': '点击进行模式切换',
                    'nextButton': {className: "myNext", text: "下一步"}
                },
                {
                    'next #contact': '点击此处可以留言反馈哦~',
                    'nextButton': {className: "myNext", text: "下一步"}
                },
                {
                    'key .cover-btns': '点击此处开启奇妙之旅吧~',
                    'shape': 'circle',
                    'radius': 70,
                    'skipButton': {className: "myNext", text: "知道了!"}
                }
            ];
            enjoyhint_instance.set(enjoyhint_script_steps);
            enjoyhint_instance.run();
        }
    }

</script>